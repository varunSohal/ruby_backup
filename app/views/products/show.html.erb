<div class="container mx-auto py-8">
  <h1 class="text-2xl font-semibold mb-4"><%= @product.name %></h1>
  <p class="text-gray-700 mb-4"><%= @product.desc %></p>
  <p class="text-gray-700 mb-4">Price: <%= @product.price %></p>
  <%= button_to "Add to Cart", add_to_cart_product_path(@product), method: :post, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  <br>
  <%= link_to "Back to Products", products_path, class: "text-blue-500 hover:underline" %>
</div>
